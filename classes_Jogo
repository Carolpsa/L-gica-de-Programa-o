class Heroi{
    constructor(nome, idade, tipo){
        this.nome = nome
        this.idade = idade
        this.tipo = tipo
    }

    atacar(){
        let ataque
        switch(this.tipo){
            case "mago":
                ataque = "magia"
                break
            case "guerreiro":
                ataque = "espada"
                break
            case "monge":
                ataque = "artes marciais"
                break
            case "ninja":
                ataque = "shuriken"
                break
            default:
                console.log("Tipo inv√°lido!")
        }
        if(ataque){
            console.log("O " + this.tipo + " atacou usando " + ataque + ".")
        }
        
    }
}


let carol = new Heroi("Carol", 20, "mago")

carol.atacar()
